<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_oval="true"
        android:src="@mipmap/logo_square"
        android:id="@+id/item_economic_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_economic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="刘喆"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_economic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="2分钟前"
                android:textColor="#ff999999"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_economic_message"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="中交海河公馆位于南开区老城厢北城街与城厢东路交口东侧，项目开盘时间待定，预计开盘4号楼，户中交海河公馆位于南开区老城厢北城街与开盘4号楼城厢东路型建面约52-128㎡.
    楼盘新闻中交海河公馆开盘时间待定2019年2月26日讯：中交海河公馆开盘时间待定，预计开盘4号楼，户型建面约52-128㎡，预计均价52000元/㎡，项目预计2021年底交房。项目位于..."
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#EEEEEE"></LinearLayout>
    </LinearLayout>
</LinearLayout>