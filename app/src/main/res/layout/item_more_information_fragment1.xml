<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/item_more_information_fragment1_title"
        android:textColor="#ff111111"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toRightOf="@id/item_more_information_fragment1_title"
        android:layout_toLeftOf="@id/item_more_information_fragment1_icon"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/item_more_information_fragment1_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="right"
        android:textColor="#ff666666"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_more_information_fragment1_icon"
        android:visibility="visible"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"/>

</RelativeLayout>