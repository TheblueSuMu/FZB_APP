<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/more_rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/more_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="公寓"
                android:textColor="#ff111111"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/more_img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/more_type_2" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/more_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面积区间"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_type_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="80-120㎡"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_ll_2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"
            />

        <LinearLayout
            android:id="@+id/more_ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品单价"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_type_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="8700/㎡"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_ll_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#EEEEEE"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/more_ll_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品年限"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_type_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="50年"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_ll_6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#EEEEEE"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/more_ll_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建筑类型"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_type_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="平层公寓（50年产权）"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_ll_8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#EEEEEE"
            android:orientation="horizontal"/>


    </LinearLayout>

</LinearLayout>