<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="241dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:ignore="ResourceName">

    <ImageView
        android:id="@+id/project_points_img"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="170dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/logo_square" />

    <TextView
        android:id="@+id/project_points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="26dp"
        android:text="泰国华欣三百峰皇家旅游度假区"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/project_points_message"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="197dp"
        android:singleLine="true"
        android:text="100字说明100字说明100字说明100字说明100字说明100字说明"
        android:textColor="#666666"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/project_points_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/fx8"
        android:layout_alignParentRight="true"
        android:layout_marginTop="197dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#F7F7F7"
        android:layout_alignParentBottom="true"></LinearLayout>

</RelativeLayout>