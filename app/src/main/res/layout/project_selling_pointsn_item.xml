<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/selling_intent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="15dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:src="@mipmap/icon_you" />

       <TextView
           android:layout_marginLeft="15dp"
           android:id="@+id/selling_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:text="泰国华欣三百峰皇家旅游度假区"
           android:textColor="#111111"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/selling_time"
           android:layout_marginTop="11dp"
           android:layout_marginLeft="15dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2019-05-30 09:52:54"
           android:layout_below="@id/selling_title"
           android:layout_marginBottom="15dp"/>
   </RelativeLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>