<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/toolbar_back">

            <LinearLayout
                android:id="@+id/oversea_back"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/return2" />

            </LinearLayout>

            <EditText
                android:id="@+id/oversea_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="56dp"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:hint="搜索"
                android:textColorHint="#ff333333"
                android:textColor="#333333" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/oversea_scroll"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/oversea_lll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/oversea_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="21dp"
                    android:text="海外房产"
                    android:textColor="#ff111111"
                    android:textSize="23sp" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.lzj.gallery.library.views.BannerViewPager
                            android:id="@+id/banner_2"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginTop="20dp">

                        </com.lzj.gallery.library.views.BannerViewPager>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/overseas_nation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:visibility="invisible">

                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/oversea_linear"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <co.lujun.androidtagview.TagContainerLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="25dp"
                            android:id="@+id/oversea_tagview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tag_border_width = "0dp"
                            app:tag_horizontal_padding = "15dp"
                            app:tag_vertical_padding = "12dp"
                            app:tag_text_size = "15sp"
                            app:tag_text_color = "#000"
                            app:horizontal_interval = "10dp"
                            app:container_border_color = "#fff"
                            app:tag_corner_radius = "3dp"
                            app:container_background_color = "#fff"
                            app:tag_border_color = "#fff"
                            app:tag_background_color = "#ffeceff3"
                            app:tag_clickable="true"/>

                        <View
                            android:layout_marginTop="23dp"
                            android:background="#fff3f2f7"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19dp"
                    android:text="专场发布"
                    android:textColor="#ff111111"
                    android:textSize="19sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/overseas_issue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:background="#F3F2F7"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="24dp"
                    android:text="热门项目"
                    android:textColor="#ff111111"
                    android:textSize="19sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp">

                    <RadioButton
                        android:id="@+id/overseas_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/over_sea"
                        android:text="综合排序"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_marginLeft="13dp"
                        android:id="@+id/overseas_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/over_sea"
                        android:gravity="center"
                        android:button="@null"
                        android:text="国家"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_marginLeft="13dp"
                        android:id="@+id/overseas_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/over_sea"
                        android:gravity="center"
                        android:button="@null"
                        android:text="价格"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_marginLeft="13dp"
                        android:id="@+id/overseas_house_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/over_sea"
                        android:gravity="center"
                        android:button="@null"
                        android:text="户型"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_marginLeft="14dp"
                        android:id="@+id/overseas_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/over_sea"
                        android:gravity="center"
                        android:button="@null"
                        android:text="筛选"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />


                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/checkbox1"
                            android:layout_weight="1"
                            android:text="独家"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                        <CheckBox
                            android:id="@+id/checkbox2"
                            android:layout_weight="1"
                            android:text="高佣"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                        <CheckBox
                            android:id="@+id/checkbox3"
                            android:layout_weight="1"
                            android:text="前佣"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                        <CheckBox
                            android:id="@+id/checkbox4"
                            android:layout_weight="1"
                            android:text="带看奖"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/checkbox5"
                            android:layout_weight="1"
                            android:text="成交奖"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                        <CheckBox
                            android:id="@+id/checkbox6"
                            android:layout_weight="1"
                            android:text="跳点"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                        <CheckBox
                            android:id="@+id/checkbox7"
                            android:layout_weight="1"
                            android:text="包销"
                            android:textSize="14sp"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:background="@drawable/tagview_check_theme"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                        <CheckBox
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_marginLeft="20dp"
                            android:text="包销"
                            android:textColor="@drawable/checkbox_text_check"
                            android:button="@null"
                            android:gravity="center"
                            android:visibility="invisible"
                            android:layout_width="70dp"
                            android:layout_height="33dp"
                            />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/overseas_hot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>

                <TextView
                    android:text="没有更多数据了"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oversea_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:background="#88323232"
        android:visibility="gone">

        <LinearLayout
            android:paddingTop="21dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/oversea_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/oversea_rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/radio_butten"
                    android:gravity="center"
                    android:text="综合排序"
                    android:textColor="#333333"
                    android:textSize="14sp" />


                <RadioButton
                    android:id="@+id/oversea_rb_2s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/radio_butten"
                    android:gravity="center"
                    android:text="国家"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/oversea_rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:drawableRight="@drawable/radio_butten"
                    android:gravity="center"
                    android:text="价格"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="14sp" />


                <RadioButton
                    android:id="@+id/oversea_rb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:drawableRight="@drawable/radio_butten"
                    android:gravity="center"
                    android:text="户型"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="14sp" />


                <RadioButton
                    android:id="@+id/oversea_rb_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:button="@null"
                    android:drawableRight="@drawable/radio_butten"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="筛选"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RadioGroup>

            <FrameLayout
                android:id="@+id/oversea_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>