<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="项目名称"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_information_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="32dp"
                android:text="切尔西水畔 泰晤士河北岸伦敦西区
第五大道第三大街"
                android:textColor="#ff666666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="产品特色"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_information_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="32dp"
                android:text="永久产权,准现房,学区房,公寓,精装
修"
                android:textColor="#ff666666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="项目地址"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/project_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/more_information_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第五大道第三大街"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_you" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="售楼处地址"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/office_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/more_information_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长春市保和大厦"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_you" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="开发商名称"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_information_developers_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="32dp"
                android:text="SFFGHF开发有限公司"
                android:textColor="#ff666666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="开发商品牌"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_information_developers_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="32dp"
                android:text="伯克利集团"
                android:textColor="#ff666666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="销售状态"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more_information_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="32dp"
                android:text="写字间"
                android:textColor="#ff666666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="16dp"
            android:background="#EEEEEE">

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="131dp"
                android:layout_height="37dp"
                android:background="@mipmap/island_back"
                android:text="我要报备"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <Button
                android:layout_width="131dp"
                android:layout_height="37dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/more_report"
                android:text="项目专线"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>