<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/item_batch_modifying_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/qtopimg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_batch_modifying_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经纪人姓名(一级)"
                android:textColor="#ff111111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_batch_modifying_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13800000000"
                android:textColor="#ff666666"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_batch_modifying_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="最后上线时间2019-03-03 15：50"
                android:textColor="#ff666666"
                android:textSize="12sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_batch_modifying_rb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_batch_modifying"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"></LinearLayout>
</LinearLayout>