<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="10dp"
    android:layout_marginRight="1dp"
    tools:ignore="ResourceName">

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ImageView"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@mipmap/fzb_down_s"
            android:scaleType="fitXY"
            app:riv_corner_radius="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/group_booking_item"
            android:background="@drawable/pingtuan"
            android:text="可拼团"
            android:textSize="11sp"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#fff"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="85dp"
            />

        <TextView
            android:id="@+id/TextViewName"
            android:layout_toRightOf="@id/ImageView"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[河东区]书香蓝郡-住宅"
            android:textColor="#ff111111"
            android:textSize="15sp"
            android:layout_gravity="center"/>


        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tagView"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/TextViewName"
            android:layout_toRightOf="@id/ImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="标签"
            android:textColor="#ff8296aa"
            app:horizontal_interval = "2dp"
            app:tag_text_size = "10sp"
            app:tag_text_color = "#ff8296aa"
            app:tag_corner_radius = "2dp"
            app:container_border_color = "#fff"
            app:container_background_color = "#fff"
            app:tag_border_color = "#fff"
            app:tag_background_color = "#ffeceff3"
            app:tag_horizontal_padding = "3dp"
            app:tag_vertical_padding = "3dp"
            app:tag_clickable="true"
            app:tag_theme="pure_teal"
            />

        <LinearLayout
            android:id="@+id/www"
            android:layout_below="@id/tagView"
            android:layout_toRightOf="@id/ImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报备"
                android:textSize="10sp"
                android:textColor="#666666"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="10sp"
                android:textColor="#666666"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="10sp"
                android:textColor="#666666"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/transmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="转发"
                android:textSize="10sp"
                android:textColor="#666666"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/www"
            android:layout_toRightOf="@id/ImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:text="价格"
                android:textColor="#A52A2A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/price_money"
                android:text="价格"
                android:textColor="#A52A2A"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>

            <View
                android:layout_marginTop="3dp"
                android:background="#ffd2d2d2"
                android:layout_width="1dp"
                android:layout_height="15dp"/>

            <TextView
                android:id="@+id/square"
                android:text="平方"
                android:textSize="10sp"
                android:textColor="#ff666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ffeeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/modulebroke_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            >

            <TextView
                android:id="@+id/commission"
                android:layout_weight="1"
                android:text="佣金：10000元/套"
                android:textSize="10sp"
                android:textColor="#ff666666"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="31dp"
                android:paddingRight="5dp"
                android:drawableLeft="@mipmap/brokerage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="2dp"
                android:background="#ffeeeeee"
                android:layout_width="1dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/second"
                android:text="秒结：10000元"
                android:textSize="10sp"
                android:textColor="#ff666666"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/time"
                android:paddingLeft="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:background="#ffeeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>



</LinearLayout>