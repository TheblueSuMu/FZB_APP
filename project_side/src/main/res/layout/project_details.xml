                        android:layout_height="wrap_content" />

                    <View
                        android:background="#fff3f2f7"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/project_details_business"
                        android:text="商务中心"
                        android:drawableLeft="@mipmap/business"
                        android:layout_marginTop="18dp"
                        android:textSize="16sp"
                        android:textColor="#111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/project_details_business_content"
                        android:text="标题下的内容"
                        android:textSize="14sp"
                        android:textColor="#111"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="#fff3f2f7"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear7"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="周边配套"
                        android:textSize="19sp"
                        android:textColor="#111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/project_details_tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabSelectedTextColor="#334485"
                            app:tabTextColor="#333333"
                            app:tabMode="scrollable"
                            app:tabIndicatorColor="#fff">

                        </com.google.android.material.tabs.TabLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/project_details_message"
                        android:textColor="#111"
                        android:textSize="14sp"
                        android:text="周边信息"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/project_details_collect"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="收藏"
                android:drawableTop="@drawable/collect_checked"
                android:textColor="#ff6d6d6d"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/project_details_share"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/share_back"
                android:text="转发"
                android:textColor="#ff6d6d6d"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="6dp">
            <TextView
                android:id="@+id/project_details_report"
                android:layout_weight="1"
                android:text="我要报备"
                android:textSize="15sp"
                android:textColor="#fff"
                android:background="@mipmap/island_back"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="37dp" />

            <TextView
                android:id="@+id/project_details_call"
                android:layout_weight="1"
                android:text="项目专线"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:background="@mipmap/more_report"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="37dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>