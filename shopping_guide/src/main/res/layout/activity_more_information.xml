<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/my_brokerage">

        <LinearLayout
            android:id="@+id/more_img"
            android:layout_width="50dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="33dp"
                android:src="@mipmap/return2" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="更多信息"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/more_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/more_l1"
                    android:layout_width="59dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_all"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品类型"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/more_l2"
                    android:layout_width="59dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_all"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目规划"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/more_l3"
                    android:layout_width="59dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back_all"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/more_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>