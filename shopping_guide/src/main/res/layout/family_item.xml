<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_width="140dp"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/family_item_pic"
        android:src="@mipmap/ic_launcher"
        android:layout_width="140dp"
        android:layout_height="100dp" />

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/family_item_room"
            android:layout_alignParentLeft="true"
            android:text="两室"
            android:textSize="12sp"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/family_item_sales"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:background="@drawable/sales_background"
            android:text="待售"
            android:textColor="#FA514B"
            android:textSize="9sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/family_item_type"
            android:text="公寓"
            android:textSize="9sp"
            android:textColor="#49B752"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/type_background"
            android:layout_width="28dp"
            android:layout_height="14dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/family_item_area"
            android:layout_alignParentLeft="true"
            android:text="面积约：120m²"
            android:textSize="9sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/family_item_orientation"
            android:text="朝向：南，北"
            android:textSize="9sp"
            android:textColor="#999999"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/family_item_price"
            android:layout_alignParentLeft="true"
            android:text="230万元/套"
            android:textSize="12sp"
            android:textColor="#AC1E26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</LinearLayout>